<?xml version="1.0"?>
<config>
    <sections>
        <neklo_abtesting translate="label" module="neklo_abtesting">
            <label>Neklo A/B Testing</label>
            <tab>neklo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>neklo_abtesting/system_config_backend_cleancache</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <session_cookie_lifetime translate="label comment">
                            <label>Session Cookie Lifetime</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>validate-zero-or-greater</validate>
                            <comment>In seconds</comment>
                        </session_cookie_lifetime>
                    </fields>
                </general>
            </groups>
        </neklo_abtesting>
    </sections>
</config>