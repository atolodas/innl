<config>
    <api>
        <resources>
            <cpwms translate="title">
                <model>cpwms/api</model>
                <title>CPWms Client XML Format API</title>
                <acl>cpwms</acl>
                <methods>
                    <processFormat translate="title">
                        <title>Process XML Format</title>
                        <method>processFormat</method>
                        <acl>cpwms/process_format</acl>
                    </processFormat>
                    <getAvailableOrders translate="title">
                        <title>Get Available Orders</title>
                        <method>getAvailableOrders</method>
                        <acl>cpwms/get_available_orders</acl>
                    </getAvailableOrders>
                </methods>
            </cpwms>
        </resources>
        <v2>
            <resources_function_prefix>
                <cpwms>cpwms</cpwms>
            </resources_function_prefix>
        </v2>
        <acl>
            <resources>
                <cpwms translate="title" module="cpwms">
                    <title>CPWms Client XML Format API</title>
                    <sort_order>100</sort_order>
                    <process_format translate="title" module="cpwms">
                        <title>Process XML Format</title>
                    </process_format>
                    <get_available_orders translate="title" module="cpwms">
                        <title>Get Available Orders</title>
                    </get_available_orders>
                </cpwms>
            </resources>
        </acl>
    </api>
</config>

