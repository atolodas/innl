<?xml version="1.0"?>
<config>
    <modules>
        <DP_Popup>
            <version>0.1.0</version>
        </DP_Popup>
    </modules>

    <frontend>
        <routers>
            <popup>
                <use>standard</use>
                <args>
                    <module>DP_Popup</module>
                    <frontName>popup</frontName>
                </args>
            </popup>
        </routers>
		<events>
            <controller_action_layout_render_before>
                <observers>
                    <popup_get_json>
                        <class>popup/observer</class>
                        <method>getJson</method>
                    </popup_get_json>
                </observers>
            </controller_action_layout_render_before>
            <controller_response_redirect>
                <observers>
                    <popup_get_json>
                        <class>popup/observer</class>
                        <method>getJson</method>
                    </popup_get_json>
                </observers>
            </controller_response_redirect>
            <http_response_send_before>
                <observers>
                    <popup_get_json>
                        <class>popup/observer</class>
                        <method>getJson</method>
                    </popup_get_json>
                </observers>
            </http_response_send_before>
        </events>

        <layout>
            <updates>
                <popup>
                    <file>popup.xml</file>
                </popup>
            </updates>
        </layout>
    </frontend>
	<default>
        <web>
            <routers>
                <json>
                    <area>frontend</area>
                    <class>DP_Popup_Controller_Varien_Router_Json</class>
                </json>
            </routers>
        </web>
    </default>

    <admin>
        <routers>
			<popup>
				<use>admin</use>
				<args>
					<module>DP_Popup</module>
					<frontName>popup</frontName>
				</args>
			</popup>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<dp_all>
				<children>
					<popups module="popup">
						<title>Manage Popups</title>
						<sort_order>50</sort_order>
						<action>popup/adminhtml_popup</action>
					</popups>
				</children>
			</dp_all>
		</menu>
			
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<DP_Popup>
							<title>Popup Module</title>
							<sort_order>10</sort_order>
						</DP_Popup>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<popup>
					<file>popup.xml</file>
				</popup>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <popup>
                <class>DP_Popup_Model</class>
                <resourceModel>popup_mysql4</resourceModel>
            </popup>
            <popup_mysql4>
                <class>DP_Popup_Model_Mysql4</class>
                <entities>
                    <popup>
                        <table>popup</table>
                    </popup>
                </entities>
            </popup_mysql4>
            <core>
                <rewrite>
                    <message>DP_Popup_Model_Core_Message</message>
                    <message_collection>DP_Popup_Model_Core_Message_Collection</message_collection>
                </rewrite>
            </core>
        </models>
        <resources>
            <popup_setup>
                <setup>
                    <module>DP_Popup</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </popup_setup>
            <popup_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </popup_write>
            <popup_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </popup_read>
        </resources>
        <blocks>
            <popup>
                <class>DP_Popup_Block</class>
            </popup>
        </blocks>
        <helpers>
            <popup>
                <class>DP_Popup_Helper</class>
            </popup>
        </helpers>
    </global>
</config>