<?xml version="1.0"?>
<config>
    <modules>
        <Shaurmalab_Events>
            <version>0.1.1</version>
        </Shaurmalab_Events>
    </modules>
    <frontend>
    </frontend>
    <admin>
        <routers>
			<events>
				<use>admin</use>
				<args>
					<module>Shaurmalab_Events</module>
					<frontName>events</frontName>
				</args>
			</events>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<score module="events">
				<children>
					<events module="events">
						<title>Events</title>
						<sort_order>0</sort_order>
						<action>events/adminhtml_events</action>
					</events>
				</children>
			</score>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Shaurmalab_Events>
							<title>Events Module</title>
							<sort_order>10</sort_order>
						</Shaurmalab_Events>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<events>
					<file>events.xml</file>
				</events>
			</updates>
		</layout>
    </adminhtml>
    <global>
        <models>
            <events>
                <class>Shaurmalab_Events_Model</class>
                <resourceModel>events_mysql4</resourceModel>
            </events>
            <events_mysql4>
                <class>Shaurmalab_Events_Model_Mysql4</class>
                <entities>
                    <events>
                        <table>events</table>
                    </events>
                </entities>
            </events_mysql4>
        </models>
        <resources>
            <events_setup>
                <setup>
                    <module>Shaurmalab_Events</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </events_setup>
            <events_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </events_write>
            <events_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </events_read>
        </resources>
        <blocks>
            <events>
                <class>Shaurmalab_Events_Block</class>
            </events>
        </blocks>
        <helpers>
            <events>
                <class>Shaurmalab_Events_Helper</class>
            </events>
        </helpers>
      <events>
          <score_oggetto_create>
              <observers>
                    <score_oggetto_created>
                        <class>events/observer</class>
                        <method>oggettoCreatedEvents</method>
                    </score_oggetto_created>
                </observers>
            </score_oggetto_create>
            <score_oggetto_save_before>
                <observers>
                    <score_oggetto_updated>
                        <class>events/observer</class>
                        <method>oggettoUpdatedEvents</method>
                    </score_oggetto_updated>
                </observers>
            </score_oggetto_save_before>
      </events>
    </global>
</config>