<?xml version="1.0"?>
<config>
    <modules>
        <Snowcommerce_Seo>
            <version>0.1.1</version>
            <depends>
                <Mage_Page />
            </depends>
        </Snowcommerce_Seo>
    </modules>
    <frontend>
        <routers>
            <seo>
                <use>standard</use>
                <args>
                    <module>Snowcommerce_Seo</module>
                    <frontName>seo</frontName>
                </args>
            </seo>
        </routers>
        <layout>
            <updates>
                <seo>
                    <file>seo.xml</file>
                </seo>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <atwix_test>
                        <type>model</type>
                        <class>seo/observer</class>
                        <method>seoChanges</method>
                    </atwix_test>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </frontend>
    <admin>
        <routers>
			<seo>
				<use>admin</use>
				<args>
					<module>Snowcommerce_Seo</module>
					<frontName>seo</frontName>
				</args>
			</seo>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<seo translate="title" module="seo">
				<title>Seo Data</title>
				<sort_order>72</sort_order>               
				<children>
					<items translate="title" module="seo">
						<title>Manage</title>
						<sort_order>1</sort_order>
						<action>seo/adminhtml_seo</action>
					</items>
                    <config translate="title" module="seo">
                        <title>Config</title>
                        <sort_order>2</sort_order>
                        <action>admin/system_config/edit/section/seo</action>
                    </config>
				</children>
			</seo>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<seo translate="title" module="seo">
							<title>Snowcommerce seo Module</title>
							<sort_order>10</sort_order>
                            <children>
                                <items translate="title" module="seo">
                                    <title>Manage</title>
                                    <sort_order>0</sort_order>
                                </items>
                            </children>
						</seo>
						 <system>
                            <children>
                                <config>
                                    <children>
                                        <seo translate="title" module="seo">
                                            <title>Seo Data config</title>
                                        </seo>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<seo>
					<file>seo.xml</file>
				</seo>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <seo>
                <class>Snowcommerce_Seo_Model</class>
                <resourceModel>seo_mysql4</resourceModel>
            </seo>
            <seo_mysql4>
                <class>Snowcommerce_Seo_Model_Mysql4</class>
                <entities>
                    <seo>
                        <table>seo</table>
                    </seo>
                </entities>
            </seo_mysql4>
        </models>
        <resources>
            <seo_setup>
                <setup>
                    <module>Snowcommerce_Seo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </seo_setup>
            <seo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </seo_write>
            <seo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </seo_read>
        </resources>
        <blocks>
            <seo>
                <class>Snowcommerce_Seo_Block</class>
            </seo>
        </blocks>
        <helpers>
            <seo>
                <class>Snowcommerce_Seo_Helper</class>
            </seo>
        </helpers>
    </global>
</config>
