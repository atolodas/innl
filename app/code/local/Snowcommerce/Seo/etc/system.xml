<config>
	<tabs>
        <additional translate="label" module="catalog">
            <label>Snowcommerce</label>
            <sort_order>203</sort_order>
        </additional>
    </tabs>
   <sections>
        <seo>
          	<label>Seo Module</label>
            <tab>additional</tab>
            <frontend_type>text</frontend_type>
            <sort_order>912</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <seo translate="label" module="catalog">
                    <label>Options</label>
                    <tab>custom</tab>
                    <frontend_type>text</frontend_type>
                    <sort_order>505</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <remove_params translate="label">
                            <label>Remove Params from url</label>
                            <frontend_type>textarea</frontend_type>
                            <cols>20</cols>
                            <sort_order>112</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>These params will be removed from urls. So for ex. url "site.com?p=2" will have same seo content as "site.com?p=3" if param "p" mentioned here. Separate params by comma.</comment>
                        </remove_params>
                    </fields>
                </seo>
            </groups>
        </seo>
    </sections>
</config>